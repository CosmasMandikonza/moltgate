{
  "name": "moltgate",
  "version": "0.0.0",
  "private": true,
  "description": "MoltGate â€“ x402 payment gateway primitive for the Stacks ecosystem",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build && pnpm -r --filter './apps/*' build",
    "dev": "pnpm -r --parallel dev",
    "dev:gateway": "pnpm --filter @moltgate/gateway dev",
    "dev:upstream": "pnpm --filter @moltgate/upstream dev",
